!!!5
html(ng-app="application", class="fluid top-full sticky-top sidebar sidebar-full js no-touch csstransforms3d csstransitions")
    head
        title.
            Simufit
        meta(charset="UTF-8")
        meta(name="viewport",content="width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0")
        meta(name="apple-mobile-web-app-capable",content="yes")
        meta(http-equiv="X-UA-Compatible",content="IE=9; IE=8; IE=7; IE=EDGE")
        meta(name="apple-mobile-web-app-status-bar-style",content="black")
        link(href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.no-icons.min.css", rel="stylesheet")
        link(href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.min.css", rel="stylesheet")
        != nap.css('styles')
    body(class="")
        div(class="container-fluid fluid menu-left")
            div(id="wrapper")
                div(id="menu", class="hidden-phone hidden-print")
                    a(href="/", class="appbrand").
                        Simufit
                    span(class="profile center")
                    ul
                        li
                            a(href="#")
                                i(class="icon-caret-right")
                                | Dashboard
                        li
                            a(href="#") Progress
                div(id="content")
                    div(class="navbar main hidden-print")
                        ul(class="topnav pull-right hidden-phone hidden-tablet hidden-desktop-1")
                            li(class="account dropdown dd-1")
                                a(data-toggle="dropdown", class="logout lock")
                                    span(class="hidden-tablet hidden-phone hidden-desktop-1") Max Alexander
                                ul(class="dropdown-menu pull-right")
                                    li
                                        a(class="btn btn-default btn-mini") Settings
                                    li
                                        a(class="btn btn-default btn-mini pull-right", href="/logout") Logout


                    div(class="ng-view")
            div(class="clearfix")
            div(id="footer", class="hidden-print")
                div(class="copy") &copy; 2012-2013 Simufit & Max Alexander
        != nap.js('base')
        != nap.js('webApp')

